<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:context="http://www.springframework.org/schema/context"
		xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context.xsd">
		
		<bean id="employee" class="main.Employee" scope="prototype">
			<property name="eId" value="1"></property>
			<property name="eName" value="Pablo Escobar"></property>
			<property name="eSalary" value="220000000"></property>
			<property name="eDept" value="Columbian Cartel"></property>
		</bean>
		
		<bean id="employeeSingleton" class="main.Employee" scope="singleton">
			<property name="eId" value="2"></property>
			<property name="eName" value="Walter White"></property>
			<property name="eSalary" value="10000"></property>
			<property name="eDept" value="Back of the Van"></property>
		</bean>
</beans>